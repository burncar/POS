@model POS.Web.ViewModel.ProductBrandTypeVm

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Product Brand Type</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="ProductBrandType.Id" hidden />
            <div class="col-10">
                <div class="p-3">
                    @* <div asp-validation-summary="All"></div> *@
                  
                    <div class="form-floating py-1 col-12">
                        <select id="productBrandSelect" asp-for="ProductBrandType.ProductBrandId" asp-items="Model.ProductBrandList"
                                class="form-select border shadow">
                            <option disabled selected>--Select Brand Name--</option>
                        </select>
                        <label class="ms-2">Product Type</label>
                        <span asp-validation-for="ProductBrandType.ProductBrandId" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-1 col-12">
                        <select id="productTypeSelect" asp-for="ProductBrandType.ProductTypeId" asp-items="Model.ProductTypeList"
                                class="form-select border shadow">
                            <option disabled selected>--Select Type Name--</option>
                        </select>
                        <label class="ms-2">Product Type</label>
                        <span asp-validation-for="ProductBrandType.ProductTypeId" class="text-danger"></span>
                    </div>

                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle"></i> Update
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="ProductBrandType" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

