@using POS.Web.ViewModel.Rendered;

@model ProductRenderedVM

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Product Brand</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="col-10">
               
                    <div class="p-3">
                    @for (var i = 0; i < Model.ProductRendered.Count(); i++)
                    {
                        <div class="form-floating py-1 col-12">
                            <input asp-for="ProductRendered[i].Description" class="form-control border shadow" />
                            <label asp-for="ProductRendered[i].Description" class="ms-2"></label>
                            <span asp-validation-for="ProductRendered[i].Description" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-1 col-12">
                            <input asp-for="ProductRendered[i].BigQuantity" class="form-control border shadow" />
                            <label asp-for="ProductRendered[i].BigQuantity" class="ms-2"></label>
                            <span asp-validation-for="ProductRendered[i].BigQuantity" class="text-danger"></span>
                        </div>

                      
                        <input asp-for="ProductRendered[i].Barcode" hidden />
                        <input asp-for="ProductRendered[i].ProductId" hidden />
                        <input asp-for="ProductRendered[i].SmallQuantity" hidden />
                        <input asp-for="ProductRendered[i].PerItemPrice" hidden />
                        <input asp-for="ProductRendered[i].TotalItemPrice" hidden />
                        <input asp-for="ProductRendered[i].Discount" hidden />
                        <input asp-for="ProductRendered[i].Id" hidden />
                        <input asp-for="ProductRendered[i].ProductRenderedId" hidden />
                         
                    }
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle"></i> Update
                                </button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="ReprintReciept" asp-action="Index" class="btn btn-secondary w-100">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </div>
              
               
            </div>

        </form>
    </div>
</div>

